#include <stdio.h>
#include <string.h>
#include <math.h>

int main(void) {
	int x, y, opcao;
	printf("Insira o valor de X: ");
	scanf("%d", &x);
	
	printf("Insira o valor de Y: ");
	scanf("%d", &y);
	
	do {
		printf("\n1 - Soma de X e Y.");
		printf("\n2 - Produto entre X e o quadrado de Y.");
		printf("\n3 - Raiz quadrada da soma dos quadrados de X e Y.");
		printf("\n4 - Seno da diferenca de X e Y.");
		printf("\n5 - Sair.");
	} while (opcao != 5);
	
	switch (opcao) {
		case 1:
			int soma = x + y;
			printf("\n1.\nX + Y = %d + %d = %d", x, y, soma);
			break;
		case 2:
			int produto = x * y * y;
			printf("\n2.\n");
			printf("\n1.\nX * Y^2 = %d + %d = %d", x, y, produto);
			break;
		case 3:
			printf("\n3.\n");
			break;
		case 4:
			printf("\n4.\n");
			break;
		case 5:
			printf("\n5.\n");
			break;
		default:
			printf("\nSelecao invalida.");
	}
	
	return 0;
}
